@model AloeExpress.Models.Order

@{
    ViewData["Title"] = "Find";
}

<h1>Find Your Orders</h1>
<h4>Please enter your personal code</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetOrders" asp-controller="Order" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecipientId" class="control-label"></label>
                <input asp-for="RecipientId" class="form-control" />
                <span asp-validation-for="RecipientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Find" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>