@model AloeExpress.ViewModels.ProductType.ProductTypeViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Type of Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TariffContainer" class="control-label"></label>
                <input asp-for="TariffContainer" class="form-control" />
                <span asp-validation-for="TariffContainer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TariffAvia" class="control-label"></label>
                <input asp-for="TariffAvia" class="form-control" />
                <span asp-validation-for="TariffAvia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllProductType">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
